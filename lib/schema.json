{
  "type": "object",
  "properties": {
    "tech_stack_name": {
      "type": "string",
      "minLength": 2
    },
    "tech_stack_css": {
      "type": "string",
      "minLength": 1
    },
    "due_date": {
      "type": "string",
      "format": "date"
    },
    "recurrence": {
      "type": "string",
      "enum": ["Never", "Daily", "Weekly", "Monthly"]
    },
    "recurrence_interval": {
      "type": "integer"
    },
    "toggle": {
      "type": "boolean",
      "description": "The \"toggle\" option renders boolean values as a toggle."
    }
  },
  "required": ["tech_stack_name", "due_date", "toggle"]
}
